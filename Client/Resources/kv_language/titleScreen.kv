<TitleScreen>:
    Image:
        id: background_a

        source: staticConfigurables.textures.get("TitleScreen", "background_a")

        allow_stretch: True
        keep_ratio: False

        color: 0.5, 0.5, 0.5, 1

    Image:
        id: background_b

        source: staticConfigurables.textures.get("TitleScreen", "background_b")

        allow_stretch: True
        keep_ratio: True

    BoxLayout:
        id: content

        size_hint: None, None

        orientation: "vertical"

        pos_hint: {"center_x": staticConfigurables.graphics.getfloat("TitleScreen", "content_size_relative_to_background_b_center_x"), "center_y": staticConfigurables.graphics.getfloat("TitleScreen", "content_size_relative_to_background_b_center_y")}

        width: background_b.norm_image_size[0] * staticConfigurables.graphics.getfloat("TitleScreen", "content_size_relative_to_background_b_width")
        height: background_b.norm_image_size[1] * staticConfigurables.graphics.getfloat("TitleScreen", "content_size_relative_to_background_b_height")

        Label:
            text: staticConfigurables.texts.get("TitleScreen", "title_text")

            color: 0, 0, 0, 1
            font_name: staticConfigurables.fonts.get("TitleScreen", "title")
            font_size: font_size(staticConfigurables.texts.getint("TitleScreen", "title_text_size"))

            size_hint_y: staticConfigurables.texts.getfloat("TitleScreen", "title_text_height")


        BoxLayout:
            orientation: "horizontal"

            size_hint_y: (1 - staticConfigurables.texts.getfloat("TitleScreen", "title_text_height")) / 2

            HoverButton:
                background_normal: ''
                background_color: 0, 0, 0, 0

                on_press: root.play_button_pressed()
                on_mouse_enter: for child in self.children: root.button_hover_animation("in", self, child)
                on_mouse_leave: for child in self.children: root.button_hover_animation("out", self, child)


                BoxLayout:
                    orientation: "vertical"

                    pos: self.parent.pos
                    size: self.parent.size

                    Image:
                        source: staticConfigurables.textures.get("TitleScreen", "play_button")

                        size_hint_y: staticConfigurables.graphics.getfloat("TitleScreen", "button_image_height")

                        allow_stretch: True
                        keep_ratio: True

                    Label:
                        text: staticConfigurables.graphics.get("TitleScreen", "play_button_text")

                        color: 0, 0, 0, 1
                        font_name: staticConfigurables.fonts.get("TitleScreen", "title")
                        font_size: font_size(staticConfigurables.texts.getint("TitleScreen", "text_size"))

                        size_hint_y: 1 - staticConfigurables.graphics.getfloat("TitleScreen", "button_image_height")


            Label:
                text: staticConfigurables.texts.get("TitleScreen", "button_not_implemented_text")

                color: 0, 0, 0, 1
                font_name: staticConfigurables.fonts.get("TitleScreen", "title")
                font_size: font_size(staticConfigurables.texts.getint("TitleScreen", "text_size"))

        BoxLayout:
            orientation: "horizontal"

            size_hint_y: (1 - staticConfigurables.texts.getfloat("TitleScreen", "title_text_height")) / 2

            Label:
                text: staticConfigurables.texts.get("TitleScreen", "button_not_implemented_text")

                color: 0, 0, 0, 1
                font_name: staticConfigurables.fonts.get("TitleScreen", "title")
                font_size: font_size(staticConfigurables.texts.getint("TitleScreen", "text_size"))


            Label:
                text: staticConfigurables.texts.get("TitleScreen", "button_not_implemented_text")

                color: 0, 0, 0, 1
                font_name: staticConfigurables.fonts.get("TitleScreen", "title")
                font_size: font_size(staticConfigurables.texts.getint("TitleScreen", "text_size"))
